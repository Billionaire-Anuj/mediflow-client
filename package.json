{
  "name": "@mediflow/root",
  "version": "1.0.0",
  "description": "Mediflow Root Package - Client React Vite TS",
  "main": "index.js",
  "scripts": {
    "build": "turbo run build",
    "test": "echo \"No tests available.\"",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "clean": "turbo run clean && pnpm run clean:local",
    "clean:local": "rimraf .turbo",
    "clean-all": "turbo run clean-all && pnpm run clean-all:local",
    "clean-all:local": "rimraf node_modules .turbo",
    "prettier:fix": "prettier --write \"**/*.{ts,tsx,md,mdx,cjs,json}\"",
    "prettier:check": "prettier --check ."
  },
  "devDependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/js": "^9.30.0",
    "@mediflow/eslint-custom-config": "workspace:*",
    "eslint": "^9.29.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "turbo": "^2.6.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.0",
    "update-ts-references": "^3.6.0"
  },
  "keywords": [],
  "author": "Affinity",
  "license": "ISC",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --report-unused-disable-directives --max-warnings 0",
      "prettier --write ."
    ]
  },
  "packageManager": "pnpm@10.15.1",
  "engines": {
    "node": ">=22.14 <23"
  }
}
